    padding: 1.5rem;
    border-radius: 8px;
  }
  .instructions code {
    font-size: 0.8em;
    font-weight: bold;
    background: rgba(var(--accent-light), 12%);
    color: rgb(var(--accent-light));
    border-radius: 4px;
    padding: 0.3em 0.4em;
  }
  .instructions strong {
    color: rgb(var(--accent-light));
  }
  .link-card-grid {
    display: grid;
    gap: 2rem;
    padding: 0;
  }
  .profile-img {
    display: flex;
    justify-content: center;
  }
  .profile-pic {
    object-fit: cover;
  }
  .profile-pic-dracula {
    border-radius: 50%;
  }
  .profile-pic-nord {
    border-radius: 5%;
  }
  .profile-pic-vaporwave {
    border-radius: 50%;
  }
  .profile-name {
    font-size: 20px;
    text-align: center;
  }
  .profile-name-dracula {
    color: #8BE9FD;
  }
  .profile-name-nord {
    color: #88c0d0;
  }
  .profile-name-vaporwave {
    color:  #03CAFC ;
  }
