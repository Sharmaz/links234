---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Links234">
  <main>
    <h1>Theme List</h1>
    <div class="theme-list">
      <div class="theme-list-item">
        <a href="/links234/profiles/1/">
          <img class="theme-list-item-image" src="/links234/dracuka.png" alt="" srcset="">
        </a>
      </div>
      <div class="theme-list-item">
        <a href="/links234/profiles/2/">
          <img class="theme-list-item-image" src="/links234/nord.png" alt="" srcset="">
        </a>
      </div>
      <div class="theme-list-item">
        <a href="/links234/profiles/3/">
          <img class="theme-list-item-image" src="/links234/vaporwave.png" alt="" srcset="">
        </a>
      </div>
    </div>
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 1rem;
    max-width: 900px;
    color: white;
    font-size: 20px;
    line-height: 1.6;
  }
  h1 {
    font-size: 3rem;
    font-weight: 700;
    line-height: 1;
    text-align: center;
    margin-bottom: 1em;
  }
  .theme-list {
    align-items: center;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }
  .theme-list-item {
    margin: 1rem;
    width: 300px;
    height: 500px;
  }
  .theme-list-item-image {
    border-radius: 25px;
    object-fit: cover;
    object-position: 50% -30px;
    width: 100%;
    height: 100%;
  }
  @media screen and (min-width: 769px) {
    .theme-list {
      flex-direction: row;
    }
    .theme-list-item {
      width: 300px;
      height: 460px;
    }
  }
</style>
